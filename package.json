{
  "name": "quota-monitor",
  "version": "3.0.0",
  "private": true,
  "description": "AI coding tool quota monitor",
  "engines": {
    "node": ">=22.12.0"
  },
  "main": "electron/main.js",
  "scripts": {
    "start": "node server.js",
    "start:web": "node server.js",
    "start:electron": "electron .",
    "dist:win": "electron-builder --win nsis"
  },
  "dependencies": {
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "electron": "^36.3.2",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.tomato.quota-monitor",
    "productName": "AI Quota Monitor",
    "author": "tomato",
    "files": [
      "electron/**/*",
      "public/**/*",
      "src/**/*",
      "server.js",
      "package.json",
      "README.md"
    ],
    "asar": true,
    "npmRebuild": false,
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-${version}-Setup-${arch}.${ext}"
    }
  }
}
