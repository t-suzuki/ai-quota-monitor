{
  "name": "ai-quota-monitor",
  "version": "0.0.1",
  "private": true,
  "description": "AI quota monitor",
  "engines": {
    "node": ">=22.12.0"
  },
  "main": "electron/main.js",
  "scripts": {
    "start": "node server.js",
    "start:web": "node server.js",
    "start:electron": "electron .",
    "dist:win": "electron-builder --win nsis zip"
  },
  "dependencies": {
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "electron": "^36.3.2",
    "electron-builder": "^26.7.0"
  },
  "author": "Takahiro SUZUKI",
  "build": {
    "appId": "com.suzuki.takahiro.quota-monitor",
    "productName": "AI Quota Monitor",
    "files": [
      "electron/**/*",
      "public/**/*",
      "src/**/*",
      "server.js",
      "package.json",
      "README.md"
    ],
    "asar": true,
    "npmRebuild": false,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "artifactName": "${productName}-${version}-Setup-${arch}.${ext}"
    }
  }
}
